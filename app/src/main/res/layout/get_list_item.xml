<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.kukiat.readershare.ShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="497dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="155dp">

        <TextView
            android:id="@+id/listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Name" />

        <TextView
            android:id="@+id/listTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picBook"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/listName"
            android:layout_toRightOf="@+id/listName"
            android:text="Topic" />

        <TextView
            android:id="@+id/desc"

            android:layout_width="370dp"
            android:layout_height="111dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/picBook"
            android:layout_marginTop="46dp"
            android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView" />

        <ImageView
            android:id="@+id/picBook"
            android:layout_width="380dp"
            android:layout_height="115dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/listName"
            android:layout_marginTop="12dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/picName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"

            android:layout_toEndOf="@+id/listName"
            android:layout_toRightOf="@+id/listName"
            app:srcCompat="@mipmap/ic_launcher" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>